#include "..\shade.inl"

#ifdef c2x2

/*
ps.2.0
// ambient color
def c0, SHADE4, MSHADE4, 0, 1.0
//c2 -diffuse color

dcl t0.xyzw
dcl t4.xy
dcl t5.xy

dcl_2d s0
dcl_2d s4
dcl_2d s5

texld_pp  r0, t0, s0
texld_pp  r1, t4, s4	// diffuse map
